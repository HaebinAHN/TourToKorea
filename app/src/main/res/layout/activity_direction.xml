<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectionActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="415dp"
        android:layout_height="437dp"
        android:layout_alignParentTop="true"
        tools:context=".MapsActivity" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="100dp"
        android:text="To"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="549dp" />

    <EditText
        android:id="@+id/ToText"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="100dp"
        android:hint="To"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToText"
        android:layout_marginLeft="100dp"
        android:text="From"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="470dp" />

    <EditText
        android:id="@+id/FromText"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:layout_marginLeft="100dp"
        android:hint="From"
        android:layout_below="@id/textView2"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="498dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@id/FromText"
        android:text="Look around from your position"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/placeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="Button"
        android:layout_below="@id/textView4"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="685dp" />





</RelativeLayout>